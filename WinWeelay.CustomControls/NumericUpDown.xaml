<UserControl x:Name="userControl" x:Class="WinWeelay.CustomControls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WinWeelay.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="28" d:DesignWidth="800">
    <Grid>
        <TextBox Name="_numericUpDownTextBox" TextAlignment="Right" PreviewKeyDown="NumericUpDownTextBox_PreviewKeyDown" TextChanged="NumericUpDownTextBox_TextChanged" Text="{Binding Value, ElementName=userControl, UpdateSourceTrigger=LostFocus}" MouseWheel="NumericUpDownTextBox_MouseWheel" />
    </Grid>
</UserControl>
