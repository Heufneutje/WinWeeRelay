<UserControl x:Class="WinWeeRelay.BufferControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinWeeRelay"
             xmlns:localcore="clr-namespace:WinWeeRelay.Core;assembly=WinWeeRelay.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <localcore:RelayBuffer/>
    </UserControl.DataContext>
    <DockPanel LastChildFill="True">
        <TextBox x:Name="_titleTextBox" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True" Text="{Binding Title}" DockPanel.Dock="Top" />
        <TextBox x:Name="_messageTextBox" TextWrapping="Wrap" KeyDown="MessageTextBox_KeyDown" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" />
        <TextBox x:Name="_conversationTextBox" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Margin="0,5" VerticalScrollBarVisibility="Visible" Text="{Binding MessageBuffer, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="ConversationTextBox_TextChanged" />
    </DockPanel>
</UserControl>
